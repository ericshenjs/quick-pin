{
  "name": "Quick Pin",
  "version": "1.1",
  "manifest_version": 2,

  "description": "Load the Pinboard.in add page inline and close the tab on finish.",
  "icons": {
      "128": "pinboard128.png",
      "16": "pinboard16.png",
      "32": "pinboard32.png",
      "48": "pinboard48.png"
   },

  "browser_action": {
    "default_icon": "pinboard16.png"
  },

  "options_page": "options.html",

  "background": {
    "scripts": ["events_handler.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "storage"
  ]
}